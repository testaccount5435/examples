apiVersion: apps/v1
kind: Deployment
metadata:
  name: affinity-deployment
  labels:
    app: affinity
spec:
  replicas: 5
  selector:
    #matchLabels must match template labels  
    matchLabels:
      app: affinity
  template:
    metadata:
      name: affinity-pod
      labels:
        app: affinity
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
              - key: security
                operator: In
                values:
                - S1
            topologyKey: kubernetes.io/hostname
      containers:
      - name: affinity-pod
        image: docker.io/papatzis1978/test
        ports:
        - containerPort: 8080
